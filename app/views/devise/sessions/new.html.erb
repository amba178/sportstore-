<div class="col-md-6 col-md-offset-3 text-center">
  <div class="page-header h2"> Log In</div>
</div>
<div class="jumbotron col-md-6 col-md-offset-3">
  <%= form_for(resource, as: resource_name, 
                        url: session_path(resource_name), html: {novalidate: false}) do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: "form-control", :required => "required" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", :required => "required" %>
    </div>

    <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
    <% if devise_mapping.rememberable? -%>
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %> Remember Me
        </label>
      </div>
    <% end -%>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
